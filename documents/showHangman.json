{
  "type": "APL",
  "version": "1.6",
  "theme": "light",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.3.0"
    }
  ],
  "mainTemplate": {
    "parameters": ["hangmanData"],
    "items": [
      {
        "type": "Frame",
        "width": "100vw",
        "height": "100vh",
        "background": "#f25fc1",
        "items": [
          {
            "type": "Container",
            "direction": "column",
            "width": "100vw",
            "height": "100vh",
            "alignItems": "center",
            "justifyContent": "center",
            "paddingLeft": "5vw",
            "paddingRight": "5vw",
            "items": [
              {
                "type": "Text",
                "text": "Ahorcado",
                "fontSize": "36dp",
                "fontWeight": "bold",
                "color": "#FFFFFF",
                "textAlign": "center",
                "paddingBottom": 8
              },
              {
                "type": "AlexaDivider",
                "entities": "dark",
                "width": "80vw",
                "color": "#000000",
                "thickness": "8dp",
                "paddingBottom": 20
              },
              {
                "type": "Image",
                "id": "hangmanImage",
                "source": "${hangmanData.currentImage}",
                "width": "120dp",
                "height": "120dp",
                "scale": "best-fit",
                "align": "center",
                "paddingBottom": 12
              },
              {
                "type": "Text",
                "id": "wordText",
                "text": "Palabra: ${hangmanData.wordProgress}",
                "fontSize": "24dp",
                "fontWeight": "bold",
                "letterSpacing": 4,
                "color": "#FFFFFF",
                "textAlign": "center",
                "paddingBottom": 10
              },
              {
                "type": "Text",
                "text": "Â¡Si fallas una letra perdÃ©is un intento! ðŸ’€ Si fallas la palabra pierdes un intento y quedas fuera ðŸ’€",
                "fontSize": "16dp",
                "width": "90vw",
                "color": "#FFFFFF",
                "textAlign": "center",
                "paddingBottom": 10
              },
              {
                "type": "Text",
                "id": "wrongCountText",
                "text": "Errores: ${hangmanData.wrongCount} de 6",
                "fontSize": "22dp",
                "fontWeight": "bold",
                "color": "#FFFFFF",
                "textAlign": "center",
                "paddingBottom": 8
              },
              {
                "type": "Text",
                "id": "usedLettersText",
                "text": "<span color='#FFFFFF'>Letras usadas:</span> <span color='#bf9cfc'>${hangmanData.usedLetters}</span>",
                "fontSize": "20dp",
                "fontStyle": "italic",
                "textAlign": "center"
              }
            ]
          }
        ]
      }
    ]
  }
}
